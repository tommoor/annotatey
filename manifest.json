{
	"name": "Annotatey",
	"version": "0.0.1",
	"description": "Annotate a webpage and save instantly to Dropbox",
	"background": {
    "scripts": [
      "js/libs/jquery-1.7.1.min.js", 
      "js/libs/dropbox.js",
      "js/libs/todata.js",
      "js/background.js"
    ],
    "persistent": false
	},
  "manifest_version": 2,
  "permissions": [
    "tabCapture",
    "contextMenus",
    "tabs",
    "storage",
    "http://*/*"
  ],
  "content_scripts": [
      {
        "matches": ["http://*/*","https://*/*"],
        "js": [
          "js/libs/jquery-1.7.1.min.js", 
          "js/injector.js"
        ]
      }
  ],
  "browser_action": {
      "default_icon": "images/icon48.png"
  },
  "icons": { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "annotator.html",
    "chrome_oauth_receiver.html",
    "js/libs/jquery-1.7.1.min.js", 
    "js/libs/dropbox.js",
    "js/libs/chrome_oauth_receiver.js",
    "js/annotator.js"
  ]
}